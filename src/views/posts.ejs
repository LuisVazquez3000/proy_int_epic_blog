

<% if (posts) { %>
	<div class="container mt-3 d-flex flex-column align-items-center"> 
		<% posts.forEach(post => { %>
			<div class="col-md-4">
			<h2><%= post.title_post %></h2>
		</div>
		<div class="card mb-3 col-md-5">
			<div class="row g-0">
				<div class="col-md-6">
					<img src=<%= post.post_link %>  class="img-thumbnail" style="width:200; heigth: 200;" alt="#">
				</div>
				<div class="col-md-6">
					<div class="card-body">
						<h5 class="card-title"><%= post.title_post %></h5>
						<p class="card-text"><%= post.content_post %></p>
						<p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
					</div>
				</div>
				<div class="d-flex mx-4 col btn_container">
					<a href="/api/v1/posts/<%= post.post_id %>" class="btn btn-outline-info btn_clase"><i class='bx bxs-edit'></i></a>
					
					<form action="/api/v1/delete/<%= post.post_id %>" method="post" >
						<input type="text" id="id" name="id" value="<%= post.post_id %>" hidden>
						<button type="submit" class="btn btn-outline-danger btn_clase "><i class='bx bxs-trash-alt'></i></button></form>
					<!-- <a href="/api/v1/delete/<%= post.post_id %>"  class="btn btn-outline-danger btn_clase "><i class='bx bxs-trash-alt'></i></a> -->
				</div>
			</div>
		</div>
		
		<% }) %>	
		
		<% } %>
	</div>
	
<style>
	img{
		max-width: 640px;
	}
	
	.btn_container{
		display: flex;
		justify-content:flex-end;
		padding: 5px;
		
	}
	.btn_clase{
		max-width: 50px;
	}
	
</style>