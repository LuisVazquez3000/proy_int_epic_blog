
<% if (posts) { %>
 <div class="container mt-4"> 
	 <% posts.forEach(post => { %>
		<h2><%= post.title_post %></h2>
		<div class="card mb-3" style="max-width: 540px;">
			<div class="row g-0">
				<div class="col-md-4">
					<img src=<%= post.post_link %>  class="img-thumbnail" style="width:200; heigth: 200;" alt="#">
				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title"><%= post.title_post %></h5>
						<p class="card-text"><%= post.content_post %></p>
						<p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
					</div>
				</div>
			</div>
		</div>
		
		<% }) %>	
		
		<% } %>
	</div>
	
